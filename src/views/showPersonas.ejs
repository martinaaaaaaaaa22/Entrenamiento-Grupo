<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ver Personas</title>

    <!-- CSS -->
    <link rel="stylesheet" href="normalize.css">
    <link rel="stylesheet" href="grid.css">
    <link rel="stylesheet" href="buttons.css">
    <link rel="stylesheet" href="styles.css">
</head>

<body>
    <header class="header shadow">
        <p class="logo">REGISTRO DE PERSONAS</p>
    </header>

    <div class="container container-xxl grid col-8">
        <div class="col-span-2 lg-col-span-8">
            <div class="container w-90">     
                <form action="/add" method="POST" class="form">
                    <input class="form-input" type="text" name="dni" placeholder="DNI">
                    <input class="form-input" type="text" name="nombre" placeholder="Nombre">
                    <input class="form-input" type="text" name="apellido" placeholder="Apellido">
                    <input class="form-input" type="text" name="equipo" placeholder="Equipo">
                    <input class="form-input" type="text" name="usuario" placeholder="Usuario">
                    <input class="form-input" type="text" name="contrase単a" placeholder="Contrase単a">
                    <a href="">
                        <button class="btn btn-primary w-100">GUARDAR</button>
                    </a>
                </form>
            </div>
        </div>

        <div class="col-span-6 lg-col-span-8">
            <div class="container container-table w-100">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>DNI</th>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Equipo</th>
                            <th>Usuario</th>
                            <th>Contrase単a</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
        
                    <tbody>
                        <% if(data){ %>
                            <% data.forEach((persona) => { %>
                                <tr>
                                    <td> <%= persona.dni %> </td>
                                    <td> <%= persona.nombre %> </td>
                                    <td> <%= persona.apellido %> </td>
                                    <td> <%= persona.equipo %> </td>
                                    <td> <%= persona.usuario %> </td>
                                    <td> <%= persona.contrase単a %> </td>

                                    <td  class="display-flex">
                                        <a href="/edit/<%= persona.dni %>">
                                            <button class="btn btn-primary">EDITAR</button>
                                        </a>
                                        <a href="/delete/<%= persona.dni %>">
                                            <button class="btn btn-danger margin-left-sm">BORRAR</button>
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>
</html>
